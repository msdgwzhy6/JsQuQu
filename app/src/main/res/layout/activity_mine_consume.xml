<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.mykj.qupingfang.view.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mh12.0dimens12.0dp"
        android:background="#fff"
        android:layout_marginLeft="@dimen/mh40.0dimens40.0dp"
        android:layout_marginRight="@dimen/mh40.0dimens40.0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_mine_czjl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_mine_message"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="充值记录"
            android:textColor="@drawable/selector_mine_account_textcolor" />

        <RadioButton
            android:id="@+id/rb_mine_gmjl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_mine_message_right"
            android:button="@null"
            android:gravity="center"
            android:text="购买记录"
            android:textColor="@drawable/selector_mine_account_textcolor" />
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_marginTop="@dimen/mh18.0dimens18.0dp">
        <ImageView
            android:id="@+id/iv_mine_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mine_message"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/mh25.0dimens25.0dp"
            android:text="亲，您还没有充值记录"/>
    </RelativeLayout>
</LinearLayout>
