<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/mh15.0dimens15.0dp">

    <RelativeLayout
        android:id="@+id/rl_lesson_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mh105.0dimens105.0dp">

        <ImageView
            android:id="@+id/iv_lesson_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/frgament_lesson_video_bg" />

        <ImageView
            android:layout_width="@dimen/mh30.0dimens30.0dp"
            android:layout_height="@dimen/mh30.0dimens30.0dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_play" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_lesson_img"
        android:layout_marginTop="@dimen/mh10.0dimens10.0dp"
        android:text="课程名字" />

    <TextView
        android:id="@+id/tv_lesson_grade2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lesson_name"
        android:layout_marginTop="5dp"
        android:text="年级" />

    <TextView
        android:id="@+id/tv_lesson_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_lesson_img"
        android:layout_marginTop="@dimen/mh10.0dimens10.0dp"
        android:text="时间" />
</RelativeLayout>